%% -*- mode:erlang -*-
{erl_opts,             [ debug_info
                       , warnings_as_errors
                       , {d,'NOTEST'}
                       , {platform_define, "^(R|1|20)", 'FUN_STACKTRACE'}
                       ]}.
{eunit_opts,           [verbose]}.
{cover_enabled,        true}.
{cover_opts,           [verbose]}.
{xref_checks,          [ undefined_function_calls
                       , deprecated_function_calls
                       ]}.
{deps,
 [ {jsone, "1.4.6"}
 ]}.
